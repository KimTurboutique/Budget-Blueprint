<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Budget Blueprint</title>
</head>

<div id="style" class="container">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="field">
        <label class="label">Enter your current Home City!</label>
        <input id="searchinput" class="input is-medium" type="text" placeholder="San Francisco, CA">
        <label class="label mt-4">Where would you like to be Your Future Home City?</label>
        <input id="futureinput" class="input is-medium" type="text" placeholder="Atlantic City, NJ">
      </div>
      <div>
        <button class="button is-primary" id="searchbtn">Search</button>
      </div>
    </div>
  </div>



  <section class="blog-posts">
    <div class="container">
      <div class="columns">
        <div class="column is-10 is-offset-1">
          <div class="columns featured-post is-multiline">
            <div class="column is-12 post">
              <article class="columns featured">
                <div class="column is-5 featured-content va">
                  <div class="centered">
                    <h1 class="title post-title" id="results">
                      Results:</h1>
                    <div class="container" id="result">
                    </div>
                  </div>

                </div>
              </article>
            </div>
          </div>
          <hr>
          <div class="columns is-multiline">
          </div>
        </div>
      </div>
    </div>

  </section>
  <script src="/js/search.js"></script>