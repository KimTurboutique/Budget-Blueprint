<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
</head>

<div class="container">
  <div class="columns">
    <div class="column">
      <h2>Welcome, {{username}}!</h2>
    </div>
  </div>

  <div class="columns mt-4">
    <div class="column is-half">
      <h3>Create a New Profile:</h3>

      <form class="new-project-form">
        <div class="field">
          <label class="label" for="project-name">Project Name:</label>
          <div class="control">
            <input class="input" type="text" id="project-name" name="project-name" />
          </div>
        </div>
        <div class="field">
          <label class="label" for="project-funding">Needed Funding ($):</label>
          <div class="control">
            <input class="input" type="number" id="project-funding" name="project-funding" />
          </div>
        </div>
        <div class="field">
          <label class="label" for="project-desc">Description:</label>
          <div class="control">
            <textarea class="textarea" id="project-desc" name="project-desc"></textarea>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button type="submit" class="button is-primary">Create</button>
          </div>
        </div>
      </form>
    </div>

    {{#if projects.length}}
    <div class="column is-half">
      <h3>Current Projects:</h3>

      {{#each projects as |project|}}
      <div class="columns mb-2">
        <div class="column is-four-fifths">
          <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
        </div>
        <div class="column">
          <button class="button is-danger is-small" data-id="{{project.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>
<script src="./js/profile.js"></script>


